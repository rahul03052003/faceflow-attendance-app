
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // This function checks for a custom claim on the user's auth token.
    // Custom claims must be set by a backend process (e.g., Cloud Function).
    function hasRole(role) {
      return request.auth.token.role == role;
    }

    // =================================
    // User Collection Rules
    // =================================
    match /users/{userId} {
      // Any authenticated user can read any user profile.
      // This is needed for the app to function (e.g. get teacher names).
      // Sensitive data should not be stored in user profiles if this is a concern.
      allow read: if isAuthenticated();

      // Admins can create any user.
      // Teachers can create Students.
      // A user can create their own user document upon signup.
      allow create: if isAuthenticated() && (hasRole('Admin') || (hasRole('Teacher') && request.resource.data.role == 'Student') || isOwner(userId) );

      // Admins can update any user.
      // Users can update their own profile.
      allow update: if isAuthenticated() && (hasRole('Admin') || isOwner(userId));

      // Only Admins can delete users.
      allow delete: if isAuthenticated() && hasRole('Admin');
    }

    // =================================
    // Subject Collection Rules
    // =================================
    match /subjects/{subjectId} {
      // Any authenticated user can read subjects.
      allow read: if isAuthenticated();
      
      // Only Admins and Teachers can create, update, or delete subjects.
      allow write: if isAuthenticated() && (hasRole('Admin') || hasRole('Teacher'));
    }

    // =================================
    // Attendance Collection Rules
    // =================================
    match /attendance/{attendanceId} {
      // Any authenticated user can list attendance records.
      // The client-side query is responsible for filtering records correctly.
      allow list: if isAuthenticated();

      // Admins and Teachers can read any individual record.
      allow get: if isAuthenticated() && (hasRole('Admin') || hasRole('Teacher'));
      
      // Only Teachers can create attendance records.
      allow create: if isAuthenticated() && hasRole('Teacher');

      // Records are immutable once created.
      allow update, delete: if false;
    }
  }
}
