
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isTeacher() {
      return isAuthenticated() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Teacher';
    }

    function isAdmin() {
      return isAuthenticated() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    function incomingData() {
        return request.resource.data;
    }
    
    function isStudent(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) && get(/databases/$(database)/documents/users/$(userId)).data.role == 'Student';
    }

    match /users/{userId} {
      // Admins and Teachers can list users.
      allow list: if isAdmin() || isTeacher();
      
      // Admins and teachers can read any user profile. Users can read their own.
      allow get: if isAdmin() || isTeacher() || isOwner(userId);

      // Admins can create/update any user. Teachers can create/update students. Users can update their own profile.
      allow create, update: if isAdmin() || (isTeacher() && incomingData().role == 'Student') || isOwner(userId);
      
      // Admins can delete any user. Teachers can delete students.
      allow delete: if isAdmin() || (isTeacher() && isStudent(userId));
    }

    match /subjects/{subjectId} {
      // Any authenticated user can read subjects.
      allow read: if isAuthenticated();
      // Only Admins and Teachers can create, update, or delete subjects.
      allow write: if isAdmin() || isTeacher();
    }

    match /attendance/{attendanceId} {
      // Admins and Teachers can read attendance records.
      allow read: if isAdmin() || isTeacher();
      // Only Teachers can create attendance records.
      allow create: if isTeacher();
      // Records are immutable.
      allow update, delete: if false;
    }
  }
}
