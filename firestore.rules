
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an Admin.
    // This reads the user's role from their profile in the /users/ collection.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // =================================
    // User Collection Rules
    // =================================
    match /users/{userId} {
      allow read: if request.auth != null;

      allow create: if request.auth != null &&
                    // An admin can create any user
                    (isAdmin() ||
                    // A teacher can create a student
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Teacher' && request.resource.data.role == 'Student'));

      allow update: if request.auth != null &&
                    // An admin can update any user
                    (isAdmin() ||
                    // A user can update their own profile
                     request.auth.uid == userId ||
                    // A teacher can update a student
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Teacher' && resource.data.role == 'Student'));

      allow delete: if request.auth != null &&
                    // An admin can delete any user
                    (isAdmin() ||
                    // A teacher can delete a student
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Teacher' && resource.data.role == 'Student'));
    }

    // =================================
    // Subject Collection Rules
    // =================================
    match /subjects/{subjectId} {
      allow read: if request.auth != null;

      allow create: if request.auth != null &&
                    (isAdmin() ||
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Teacher' && request.auth.uid == request.resource.data.teacherId));
      
      allow update: if request.auth != null &&
                    (isAdmin() ||
                     // A teacher can update their own subject
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Teacher' && request.auth.uid == resource.data.teacherId));

      allow delete: if request.auth != null &&
                    (isAdmin() ||
                     // A teacher can delete their own subject
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Teacher' && request.auth.uid == resource.data.teacherId));
    }

    // =================================
    // Attendance Collection Rules
    // =================================
    match /attendance/{attendanceId} {
      allow list, get: if request.auth != null;

      allow create: if request.auth != null &&
                    (isAdmin() ||
                     // A teacher can create an attendance record for a subject they teach
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Teacher' &&
                      exists(/databases/$(database)/documents/subjects/$(request.resource.data.subjectId)) &&
                      get(/databases/$(database)/documents/subjects/$(request.resource.data.subjectId)).data.teacherId == request.auth.uid));
      
      allow update, delete: if false; // No one can update or delete attendance records
    }
  }
}
