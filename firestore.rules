
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Check for role in the user's custom auth token.
    function getUserRole() {
      return request.auth.token.role;
    }

    function isTeacher() {
      return isAuthenticated() && getUserRole() == 'Teacher';
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'Admin';
    }


    // =================================
    // User Collection Rules
    // =================================
    match /users/{userId} {
      // Admins and Teachers can list all users. 
      allow list: if isAuthenticated() && (isAdmin() || isTeacher());
      // Any authenticated user can read their own profile.
      allow get: if isAuthenticated();
      
      // Admins can create any user.
      // Teachers can create Students.
      allow create: if isAdmin() || (isTeacher() && request.resource.data.role == 'Student');

      // Admins can update any user.
      // Any user can update their own profile.
      // Teachers can only update users whose role is 'Student'.
      allow update: if isAdmin() || isOwner(userId) || (isTeacher() && request.resource.data.role == 'Student');
      
      // Admins can delete any user. Teachers can only delete students.
      allow delete: if isAdmin() || (isTeacher() && get(/databases/$(database)/documents/users/$(userId)).data.role == 'Student');
    }

    // =================================
    // Subject Collection Rules
    // =================================
    match /subjects/{subjectId} {
      // Any authenticated user can read subjects.
      allow read: if isAuthenticated();

      // Admins can create any subject.
      // Teachers can only create subjects where they are the teacher.
      allow create: if isAdmin() || (isTeacher() && request.auth.uid == request.resource.data.teacherId);
      
      // Admins can update any subject.
      // Teachers can only update subjects they are assigned to.
      allow update: if isAuthenticated() &&
                    (isAdmin() || 
                    (isTeacher() && request.auth.uid == resource.data.teacherId));

      // Admins can delete any subject.
      // Teachers can only delete subjects they are assigned to.
      allow delete: if isAuthenticated() &&
                    (isAdmin() || 
                    (isTeacher() && request.auth.uid == resource.data.teacherId));
    }

    // =================================
    // Attendance Collection Rules
    // =================================
    match /attendance/{attendanceId} {
      // Authenticated users can list attendance records.
      allow list: if isAuthenticated();

      // Admins and Teachers can read any individual record.
      allow get: if isAuthenticated() && (isAdmin() || isTeacher());

      // A teacher can create an attendance record for one of their subjects.
      allow create: if isTeacher() && get(/databases/$(database)/documents/subjects/$(request.resource.data.subjectId)).data.teacherId == request.auth.uid;
      
      // Records are immutable once created.
      allow update, delete: if false;
    }
  }
}
