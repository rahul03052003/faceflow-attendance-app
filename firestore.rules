
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is an Admin
    function isAdmin() {
      return isAuthenticated() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    // Helper function to check if the requesting user is a Teacher
    function isTeacher() {
      return isAuthenticated() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Teacher';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow any authenticated user to list the collection.
      // This is necessary for the dashboard, reports, and user management pages.
      // The more restrictive 'get' rule below prevents them from reading sensitive data from other users' documents.
      allow list: if isAuthenticated();

      // Allow a user to read their own document.
      allow get: if isAuthenticated() && request.auth.uid == userId;
      
      // Admins can create/update/delete any user.
      // Teachers can create/update students.
      // Users can update their own profile (if needed, currently not used).
      allow write: if isAdmin() || (isTeacher() && request.resource.data.role == 'Student');
    }

    // Rules for the 'subjects' collection
    match /subjects/{subjectId} {
      // Any authenticated user can read all subjects
      allow read: if isAuthenticated();
      // Only Teachers and Admins can create, update, and delete subjects
      allow write: if isTeacher() || isAdmin();
    }

    // Rules for the 'attendance' collection
    match /attendance/{attendanceId} {
      // Any authenticated user can read the attendance records.
      // A more granular rule might be needed here in a real app (e.g., only their own or their students').
      allow read: if isAuthenticated();
      // Teachers can create new attendance records
      allow create: if isTeacher();
      // Attendance records are immutable once created
      allow update, delete: if false;
    }
  }
}
