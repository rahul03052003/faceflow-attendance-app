rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user's role from the users collection
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Helper function to check if the user is an Admin
    function isAdmin() {
      return isAuthenticated() && getUserRole(request.auth.uid) == 'Admin';
    }
    
    // Helper function to check if the user is a Teacher
    function isTeacher() {
      return isAuthenticated() && getUserRole(request.auth.uid) == 'Teacher';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins and Teachers can read all user profiles
      // Students can only read their own profile
      allow get, list: if isTeacher() || isAdmin() || request.auth.uid == userId;

      // Admins can create/update/delete any user
      // Teachers can create/update students
      allow write: if isAdmin() || (isTeacher() && request.resource.data.role == 'Student');
    }

    // Rules for the 'subjects' collection
    match /subjects/{subjectId} {
      // Teachers and Admins can read all subjects
      allow get, list: if isTeacher() || isAdmin();
      // Teachers and Admins can create, update, and delete subjects
      allow write: if isTeacher() || isAdmin();
    }

    // Rules for the 'attendance' collection
    match /attendance/{attendanceId} {
      // Any authenticated user can read the attendance records
      allow read: if isAuthenticated();
      // Teachers can create new attendance records
      allow create: if isTeacher();
      // Attendance records are immutable once created
      allow update, delete: if false;
    }
  }
}
