
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // These functions get the user's role from their document in the /users collection.
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isTeacher(userId) {
      return getUserRole(userId) == 'Teacher';
    }

    function isAdmin(userId) {
      return getUserRole(userId) == 'Admin';
    }


    // =================================
    // User Collection Rules
    // =================================
    match /users/{userId} {
      // Any authenticated user can read any user profile for now.
      // This is needed for the app to function (e.g. get teacher names).
      allow read: if isAuthenticated();

      // Admins can create any user.
      // Teachers can create Students.
      // A user can create their own user document upon signup.
      allow create: if isAuthenticated() && (isAdmin(request.auth.uid) || (isTeacher(request.auth.uid) && request.resource.data.role == 'Student') || isOwner(userId) );

      // Admins can update any user.
      // Users can update their own profile.
      allow update: if isAuthenticated() && (isAdmin(request.auth.uid) || isOwner(userId));

      // Only Admins can delete users.
      allow delete: if isAuthenticated() && isAdmin(request.auth.uid);
    }

    // =================================
    // Subject Collection Rules
    // =================================
    match /subjects/{subjectId} {
      // Any authenticated user can read subjects.
      allow read: if isAuthenticated();
      
      // Only Admins and Teachers can create, update, or delete subjects.
      allow write: if isAuthenticated() && (isAdmin(request.auth.uid) || isTeacher(request.auth.uid));
    }

    // =================================
    // Attendance Collection Rules
    // =================================
    match /attendance/{attendanceId} {
      // Authenticated users can list attendance records.
      // Client-side queries are responsible for filtering to only the records the user should see.
      allow list: if isAuthenticated();

      // Admins and Teachers can read any individual record.
      allow get: if isAuthenticated() && (isAdmin(request.auth.uid) || isTeacher(request.auth.uid));
      
      // Only a teacher assigned to the subject can create an attendance record.
      allow create: if isAuthenticated() && isTeacher(request.auth.uid) &&
                    get(/databases/$(database)/documents/subjects/$(request.resource.data.subjectId)).data.teacherId == request.auth.uid;

      // Records are immutable once created.
      allow update, delete: if false;
    }
  }
}
