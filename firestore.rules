
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isTeacher(userId) {
        return getUserRole(userId) == 'Teacher';
    }
    
    function isAdmin(userId) {
        return getUserRole(userId) == 'Admin';
    }

    // =================================
    // User Collection Rules
    // =================================
    match /users/{userId} {
      // Admins can read all user profiles.
      // Teachers can read their own profile and the profiles of their students.
      // A user can always read their own profile.
      allow get: if isAuthenticated() && (isAdmin(request.auth.uid) || isOwner(userId) || (isTeacher(request.auth.uid) && resource.data.role == 'Student'));
      
      // Allow listing users only for authenticated users, but it will be filtered on the client side.
      // The `get` rule above is the most important one for security.
      allow list: if isAuthenticated();

      // Admins can create/update any user. Teachers can create/update students.
      // Users can update their own profile.
      allow create, update: if isAuthenticated() && (isAdmin(request.auth.uid) || (isTeacher(request.auth.uid) && request.resource.data.role == 'Student') || isOwner(userId));
      
      // Admins can delete any user. Teachers can delete students.
      allow delete: if isAuthenticated() && (isAdmin(request.auth.uid) || (isTeacher(request.auth.uid) && get(/databases/$(database)/documents/users/$(userId)).data.role == 'Student'));
    }

    // =================================
    // Subject Collection Rules
    // =================================
    match /subjects/{subjectId} {
      // Any authenticated user can read subjects.
      allow read: if isAuthenticated();
      
      // Only Admins and Teachers can create, update, or delete subjects.
      allow write: if isAuthenticated() && (isAdmin(request.auth.uid) || isTeacher(request.auth.uid));
    }

    // =================================
    // Attendance Collection Rules
    // =================================
    match /attendance/{attendanceId} {
      // Admins and Teachers can read all attendance records, which will be filtered on the client.
      allow read: if isAuthenticated() && (isAdmin(request.auth.uid) || isTeacher(request.auth.uid));

      // Only Teachers can create attendance records.
      allow create: if isAuthenticated() && isTeacher(request.auth.uid);

      // Records are immutable once created.
      allow update, delete: if false;
    }
  }
}
