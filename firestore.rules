
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'Admin';
    }

    function isTeacher() {
      return isAuthenticated() && getUserRole() == 'Teacher';
    }

    function incomingData() {
      return request.resource.data;
    }

    // =================================
    // User Collection Rules
    // =================================
    match /users/{userId} {
      // Any authenticated user can list users. The individual documents are still protected.
      allow list: if isAuthenticated();
      
      // Admins and Teachers can read any user profile. Users can read their own.
      allow get: if isAdmin() || isTeacher() || isOwner(userId);

      // Admins can create/update any user. Teachers can create/update students. Users can update their own profile.
      allow create, update: if isAdmin() || (isTeacher() && incomingData().role == 'Student') || isOwner(userId);
      
      // Admins can delete any user. Teachers can delete students.
      allow delete: if isAdmin() || (isTeacher() && get(/databases/$(database)/documents/users/$(userId)).data.role == 'Student');
    }

    // =================================
    // Subject Collection Rules
    // =================================
    match /subjects/{subjectId} {
      // Any authenticated user can read subjects.
      allow read: if isAuthenticated();
      
      // Only Admins and Teachers can create, update, or delete subjects.
      allow write: if isAdmin() || isTeacher();
    }

    // =================================
    // Attendance Collection Rules
    // =================================
    match /attendance/{attendanceId} {
      // Admins and Teachers can read all attendance records.
      allow read: if isAdmin() || isTeacher();

      // Only Teachers can create attendance records.
      allow create: if isTeacher();

      // Records are immutable once created.
      allow update, delete: if false;
    }
  }
}
