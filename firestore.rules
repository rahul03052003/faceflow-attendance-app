
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user has the 'Admin' role
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    // Helper function to check if the requesting user has the 'Teacher' role
    function isTeacher() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Teacher';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can list the users collection.
      allow list: if isAuthenticated();
      // A user can read/write their own document. Admins and Teachers can read any user document.
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin() || isTeacher());

      // Admins can write to any user.
      // Teachers can write to students.
      // Users can update their own profile.
      allow write: if (isAdmin() || (isTeacher() && request.resource.data.role == 'Student') || request.auth.uid == userId);
    }

    // Rules for the 'subjects' collection
    match /subjects/{subjectId} {
      // Any authenticated user can read all subjects.
      allow read: if isAuthenticated();
      // Only Teachers and Admins can write subjects.
      allow write: if isTeacher() || isAdmin();
    }

    // Rules for the 'attendance' collection
    match /attendance/{attendanceId} {
      // Any authenticated user can read attendance records for reports.
      allow read: if isAuthenticated();
      // Only Teachers can create new attendance records.
      allow create: if isTeacher();
      // Attendance records are immutable once created.
      allow update, delete: if false;
    }
  }
}
