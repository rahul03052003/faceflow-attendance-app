
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return request.auth.token.role == role;
    }

    function incomingData() {
      return request.resource.data;
    }

    // =================================
    // User Collection Rules
    // =================================
    match /users/{userId} {
      // Admins and Teachers can list users.
      allow list: if hasRole('Admin') || hasRole('Teacher');
      
      // Admins and Teachers can read any user profile. Users can read their own.
      allow get: if hasRole('Admin') || hasRole('Teacher') || isOwner(userId);

      // Admins can create/update any user. Teachers can create/update students. Users can update their own profile.
      allow create, update: if hasRole('Admin') || (hasRole('Teacher') && incomingData().role == 'Student') || isOwner(userId);
      
      // Admins can delete any user. Teachers can delete students.
      allow delete: if hasRole('Admin') || (hasRole('Teacher') && get(/databases/$(database)/documents/users/$(userId)).data.role == 'Student');
    }

    // =================================
    // Subject Collection Rules
    // =================================
    match /subjects/{subjectId} {
      // Any authenticated user can read subjects.
      allow read: if isAuthenticated();
      
      // Only Admins and Teachers can create, update, or delete subjects.
      allow write: if hasRole('Admin') || hasRole('Teacher');
    }

    // =================================
    // Attendance Collection Rules
    // =================================
    match /attendance/{attendanceId} {
      // Admins and Teachers can read all attendance records.
      allow read: if hasRole('Admin') || hasRole('Teacher');

      // Only Teachers can create attendance records.
      allow create: if hasRole('Teacher');

      // Records are immutable once created.
      allow update, delete: if false;
    }
  }
}
