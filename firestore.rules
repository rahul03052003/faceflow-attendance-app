
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return isAuthenticated() && getUserData(request.auth.uid).role == 'Admin';
    }

    function isTeacher() {
      return isAuthenticated() && getUserData(request.auth.uid).role == 'Teacher';
    }
    
    function isStudent(userId) {
      return getUserData(userId).role == 'Student';
    }

    match /users/{userId} {
      // Any authenticated user can see the list of users.
      // Specific document access is controlled by 'get' and 'write' rules.
      allow list: if isAuthenticated();
      
      // Admins and teachers can read any user profile. Users can read their own.
      allow get: if isAdmin() || isTeacher() || isOwner(userId);

      // Admins can create/update/delete any user.
      // Teachers can create/update/delete students.
      // Users can update their own profile.
      allow write: if isAdmin() 
                   || (isTeacher() && isStudent(userId))
                   || isOwner(userId);
    }

    match /subjects/{subjectId} {
      // Any authenticated user can read subjects.
      allow read: if isAuthenticated();
      // Only Admins and Teachers can create, update, or delete subjects.
      allow write: if isAdmin() || isTeacher();
    }

    match /attendance/{attendanceId} {
      // Admins and Teachers can read attendance records.
      allow read: if isAdmin() || isTeacher();
      // Only Teachers can create attendance records.
      allow create: if isTeacher();
      // Records are immutable.
      allow update, delete: if false;
    }
  }
}
